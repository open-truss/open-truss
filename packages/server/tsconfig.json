{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@open-truss/open-truss": ["../../packages/open-truss/dist/mjs/index.js"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
